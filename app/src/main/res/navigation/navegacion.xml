<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navegacion"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/login"
        android:name="com.example.examenmochachristian.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_inicio"
            app:destination="@id/inicio" />
        <action
            android:id="@+id/action_login_to_registro"
            app:destination="@id/registro" />
    </fragment>
    <fragment
        android:id="@+id/inicio"
        android:name="com.example.examenmochachristian.Inicio"
        android:label="Inicio" />
    <fragment
        android:id="@+id/congreso"
        android:name="com.example.examenmochachristian.congreso"
        android:label="fragment_congreso"
        tools:layout="@layout/fragment_congreso" />
    <fragment
        android:id="@+id/salud"
        android:name="com.example.examenmochachristian.salud"
        android:label="fragment_salud"
        tools:layout="@layout/fragment_salud" />
    <fragment
        android:id="@+id/registro"
        android:name="com.example.examenmochachristian.Registro"
        android:label="fragment_registro"
        tools:layout="@layout/fragment_registro" >
        <action
            android:id="@+id/action_registro_to_inicio"
            app:destination="@id/inicio" />
    </fragment>
    <fragment
        android:id="@+id/acercaDe"
        android:name="com.example.examenmochachristian.AcercaDe"
        android:label="AcercaDe" />
</navigation>